    function suggestFilm() {
      const mood = document.getElementById("mood").value;
      const country = document.getElementById("country").value;
      const genre = document.getElementById("genre").value;
      const subgenre = document.getElementById("subgenre").value;
      const language = document.getElementById("language").value;

      const filtered = films.filter(film =>
        (country === "BÃ¼tÃ¼n Ãœlkeler" || film.country === country) &&
        film.mood === mood &&
        film.genre === genre &&
        film.subgenre === subgenre &&
        film.language === language
      );

      const result = document.getElementById("result");
      if (filtered.length > 0) {
        const film = filtered[Math.floor(Math.random() * filtered.length)];
        result.innerHTML = `
          <div class="film-title">ğŸ¬ ${film.title}</div>
          <div class="film-details">TÃ¼r: ${film.genre} (${film.subgenre})</div>
          <div class="film-details">Ãœlke: ${film.country} | Ruh hali: ${film.mood}</div>
          <div class="film-details">Dil: ${film.language} | IMDb: â­ ${film.imdb}</div>
        `;
      } else {
        result.innerHTML = `<div class='film-details'>Uygun bir film bulunamadÄ±, lÃ¼tfen baÅŸka kombinasyon deneyin.</div>`;
      }
    }
