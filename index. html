  <button onclick="suggestFilm()">Öneri Al</button>

  <div id="result" class="film"></div>

  <script>
    const films = [
      {
        title: "Inception",
        mood: "Motivasyonlu",
        country: "ABD",
        genre: "Bilim Kurgu",
        subgenre: "Uzay / Evren",
        language: "Türkçe Altyazı",
        imdb: 8.8
      },
      {
        title: "Ayla",
        mood: "Hüzünlü",
        country: "Türkiye",
        genre: "Dram",
        subgenre: "Biyografi",
        language: "Türkçe Dublaj",
        imdb: 8.4
      },
      {
        title: "Train to Busan",
        mood: "Korkmuş",
        country: "Kore",
        genre: "Korku",
        subgenre: "Zombi",
        language: "Türkçe Altyazı",
        imdb: 7.6
      },
      {
        title: "The Intouchables",
        mood: "Huzurlu",
        country: "Fransa",
        genre: "Komedi",
        subgenre: "Romantik Dram",
        language: "Türkçe Dublaj",
        imdb: 8.5
      }
    ];

    function suggestFilm() {
      const mood = document.getElementById("mood").value;
      const country = document.getElementById("country").value;
      const genre = document.getElementById("genre").value;
      const subgenre = document.getElementById("subgenre").value;
      const language = document.getElementById("language").value;

      const filtered = films.filter(film =>
        (country === "Bütün Ülkeler" || film.country === country) &&
        film.mood === mood &&
        film.genre === genre &&
        film.subgenre === subgenre &&
        film.language === language
      );

      const result = document.getElementById("result");
      if (filtered.length > 0) {
        const film = filtered[Math.floor(Math.random() * filtered.length)];
        result.innerHTML = `
          <div class="film-title">🎬 ${film.title}</div>
          <div class="film-details">Tür: ${film.genre} (${film.subgenre})</div>
          <div class="film-details">Ülke: ${film.country} | Ruh hali: ${film.mood}</div>
          <div class="film-details">Dil: ${film.language} | IMDb: ⭐ ${film.imdb}</div>
        `;
      } else {
        result.innerHTML = `<div class='film-details'>Uygun bir film bulunamadı, lütfen başka kombinasyon deneyin.</div>`;
      }
    }
  </script>
